@model BookDTO

@{
    ViewData["Title"] = "Remover";
}

<h1>Remove</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>BookDTO</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Autor
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            Editora
        </dt>
        <dd class="col-sm-10">
            @Model.Publisher
        </dd>
    </dl>
    <a asp-controller="Book"
       asp-action="List" class="btn btn-primary btn-base">Voltar</a>
    <a asp-controller="Book"
       asp-action="Remove"
       asp-route-idBook="@Model.Id" class="btn btn-secondary btn-base">Excluir</a>
</div>
